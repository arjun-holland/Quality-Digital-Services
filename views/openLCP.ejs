      height: 100px;
      margin-right: 10px;
    }

    .logo span {
      font-size: 20px;
    }

    .logo span b {
      color: #f90;
    }

    nav a {
      margin-left: 30px;
      text-decoration: none;
      color: #ff6600;
      font-weight: bold;
      font-size: 20px;
    }
    .content-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .main-container {
      display: flex;
      gap: 20px;
      margin-top: 30px;
      flex-wrap: wrap;
      max-width: 1000px;
      width: 100%;
    }

    .info-card {
      flex: 2;
      background-color: #e8f1ff;
      padding: 20px;
      border-radius: 10px;
