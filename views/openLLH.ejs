    }

    /* New container to center main content + button */
    .content-wrapper {
      max-width: 900px; /* control max width */
      margin: 30px auto; /* center horizontally with top/bottom margin */
      padding: 0 15px; /* small horizontal padding */
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 30px;
    }

    .main-container {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      justify-content: center; /* center child info-card */
      width: 100%;
    }

    .info-card {
      flex: 2;
      background-color: #e8f1ff;
      padding: 20px;
