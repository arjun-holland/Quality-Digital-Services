  <title>Quality Digital Services</title>
  <link rel="stylesheet" href="style.css"/>
  <style>
  * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Segoe UI', sans-serif;
}

body {
  background-color: #f2f4ff;
  /* padding: 20px; */
}

header {
      background-color: #fff;
      padding: 10px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .logo {
      display: flex;
      align-items: center;
    }

    .logo img {
      width: 400px;
      height: 100px;
      margin-right: 10px;
    }

    .logo span {
      font-size: 20px;
    }

    .logo span b {
      color: #f90;
    }

    nav a {
      margin-left: 30px;
      text-decoration: none;
      color: #ff6600;
      font-weight: bold;
      font-size: 20px;
    }

  .main-container {
    background-color: transparent;
  }

  .info-card {
    background-color: #e8f1ff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 8px rgba(0,0,0,0.1);
  }

  .info-card h2 {
    margin-bottom: 15px;
    color: #c60000;
  }

  .info-card h3 {
    margin-top: 20px;
    color: #333;
  }

  .info-card ul,
  .info-card ol {
    padding-left: 20px;
    margin-top: 10px;
  }

  .app-logo {
    width: 60px;
    margin-bottom: 10px;
  }

  .button {
    padding: 12px 20px;
    background-color: #f57c00;
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s;
  }

  .button:hover {
    background-color: #e06b00;
  }
</style>
</head>
