    <script>
  const cardRoutes = {
    "Goibibo": "/openWLBG",
    "Makemytrip": "/openWLBM",
    "Expedia": "/openWLBE",
    "Hotels": "/openWLBH",
    "Trip": "/openWLBT",
    "Indigo": "/openWLBI"
  };

  let selectedRoute = "#";

  document.querySelectorAll('.apply-without-login').forEach(button => {
    button.addEventListener('click', () => {
      const cardName = button.getAttribute('data-card');
      selectedRoute = cardRoutes[cardName] || "#";
      document.querySelector('.modal-overlay').style.display = 'block';
    });
  });

  function hideModal() {
    document.querySelector('.modal-overlay').style.display = 'none';
    selectedRoute = "#";
  }

  document.getElementById('proceedWithoutLogin').addEventListener('click', () => {
    location.href = selectedRoute;
  });
